<%- include('../inc/adminHeader') %>
<!--including the header file from the inc folder -->
<%- include('../inc/adminNav') %>
<!--including the navigation file from the inc folder -->
<div class="container-fluid">
  <div class="row">

    <%- include('../inc/adminSidebar') %>
    <!--including the admin sidebar file from the inc folder -->

    <main id="mainBody" class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Add Page</h1>
        <div class="container">
          <% if (errorList) { %>
             <% errorList.errors.forEach(function(error) { console.log(); %>
               
              
              <div class="alert alert-danger">
                <%= error.msg %>
              </div>
            <% }); %>

          <% } %>
          <form action="/admin/addpage" method="POST" class="mt-4">
            <div class="mb-3">
              <label for="title" class="form-label">Title </label>
              <input type="text" name="title" id="title" class="form-control" placeholder="Enter Page Title">
            </div>

            <div class="mb-3">
              <label for="slug" class="form-label">Slug</label>
              <input type="text" name="slug" id="slug" class="form-control" placeholder="Enter Page slug">
            </div>

            <div class="mb-3">
              <label for="content" class="form-label">Content</label>
              <textarea name="content" id="content" class="form-control" placeholder="Enter Page content"></textarea>
            </div>

            <div class="mb-3">
              <button type="submit" class="btn btn-primary">Save</button>
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>
</div>

<!--including the footer file from the inc folder -->
<%- include('../inc/adminFooter') %>