<%- include('../inc/adminHeader') %>
<!--including the header file from the inc folder -->
<%- include('../inc/adminNav') %>
<!--including the navigation file from the inc folder -->
<div class="container-fluid">
  <div class="row">

    <%- include('../inc/adminSidebar') %>
    <!--including the admin sidebar file from the inc folder -->

    <main id="mainBody" class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Edit Page</h1>
        <div class="container">
          <a href="/admin/pagelist" class="btn btn-info">Goto page list</a>
         
          <form action="/admin/editpage" method="POST" class="mt-4">
            <div class="mb-3">
              <label for="title" class="form-label">Title </label>
              <input type="text" name="title" id="title" class="form-control" placeholder="Enter Page Title" value="<%- formdata!=null?formdata.title:''%>">
              <input type="hidden" name="id" value="<%- formdata!=null?formdata._id:''%>">
              <% if (errorList) { %>
              <% if (errorList.title) { %>
              <div class="alert alert-danger">
                <%= errorList.title.msg %>
              </div>
              <% } %>
              <% } %>
            </div>

            <div class="mb-3">
              <label for="slug" class="form-label">Slug</label>
              <input type="text" name="slug" id="slug" class="form-control" placeholder="Enter Page slug" value="<%- formdata!=null?formdata.slug.replace('-',' '):''%>">
            </div>

            <div class="mb-3">
              <label for="content" class="form-label">Content</label>
              <textarea name="content" id="content" class="form-control ckeditor" placeholder="Enter Page content"><%- formdata!=null?formdata.content:''%></textarea>
              <% if (errorList) { %>
                <% if (errorList.content) { %>
                <div class="alert alert-danger">
                  <%= errorList.content.msg %>
                </div>
                <% } %>
                <% } %>
            </div>

            <div class="mb-3">
              <button type="submit" class="btn btn-primary">Save</button>
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>
</div>

<!--including the footer file from the inc folder -->
<%- include('../inc/adminFooter') %>